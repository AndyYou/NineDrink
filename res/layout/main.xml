<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*"
    >
	<TableRow>
		<TextView android:id="@+id/show_msg"
    		android:layout_width="fill_parent"
    		android:layout_height="50px"
    		android:text=""
		/>
	</TableRow>
	<TableRow>
		<Button android:text="" android:id="@+id/btn_1" 
			android:layout_width="50px" 
			android:layout_height="80px" 
			android:padding="3dip">
		</Button>
		<Button android:text="" android:id="@+id/btn_2" 
			android:layout_width="50px" 
			android:layout_height="80px" 
			android:padding="3dip">
		</Button>   
	</TableRow>
	<TableRow>
		<Button android:text="" android:id="@+id/btn_3" 
			android:layout_width="50px" 
			android:layout_height="80px" 
			android:padding="3dip">
		</Button>
		<Button android:text="" android:id="@+id/btn_4" 
			android:layout_width="50px" 
			android:layout_height="80px" 
			android:padding="3dip">
		</Button>   
	</TableRow>
	<TableRow>
		<TextView
    		android:layout_width="fill_parent"
    		android:layout_height="10px"
    		android:text=""
		/>
	</TableRow>
	<TableRow>
		<Button android:text="@string/btn_reset" android:id="@+id/btn_reset" 
			android:layout_width="fill_parent" 
			android:layout_span="2"
			android:layout_height="50px" 
			android:padding="3dip">
		</Button>  
	</TableRow>
	<TableRow>
		<ImageButton android:id="@+id/imgbtn_1"
			android:src="@drawable/selector" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:background="@drawable/limpid"
			android:adjustViewBounds ="true"
			></ImageButton>
	</TableRow>
</TableLayout>
